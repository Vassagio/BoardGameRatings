@using System.Threading.Tasks
@using BoardGameRatings.WebSite.Controllers
@model BoardGameRatings.WebSite.ViewModels.PlayerViewModel

@{
    ViewData["Title"] = @Model.FullName;
}

<div class="col-md-6">
    @using (Html.BeginForm(PlayerController.BuildSaveActionRouteValues(@Model)))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control"/>
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control"/>
        </div>

        <input type="hidden" asp-for="Id"/>

        <div class="btn-group">
            <input type="submit" value="Save" class="btn btn-default"/>
            <a href="@Url.RouteUrl(PlayersController.BuildIndexActionRouteValues())" class="btn btn-default">Cancel</a>
        </div>
    }
</div>

<div>
    @Html.Partial("_GamesOwned")
</div>