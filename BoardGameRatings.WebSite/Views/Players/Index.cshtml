@using BoardGameRatings.WebSite.Controllers
@using BoardGameRatings.WebSite.ViewModels
@model BoardGameRatings.WebSite.ViewModels.PlayersViewModel

@{
    ViewData["Title"] = "Players";
}
    
<div class="col-md-4  col-md-offset-4">
    <table class="table table-striped table-bordered table-responsive">
        <thead>
        <tr>
            <th class="head"><a class="btn btn-default" href="@Url.RouteUrl(PlayersController.BuildAddActionRouteValues())">Name</a></th>  
            <th></th>
        </tr>
        </thead>
        @foreach (var player in Model.Players)
        {
            <tr>
                <td class="col-md-3">
                    <a href="@Url.RouteUrl(PlayersController.BuildEditActionRouteValues(player.Id))">@player.GetFullName()</a>                    
                </td>                      
                <td  class="col-md-1 text-center">
                   <a href="@Url.RouteUrl(PlayersController.BuildRemoveActionRouteValues(player.Id))"><i class="fa fa-trash" style="color:red"></i></a>
                </td>
            </tr>
        }
    </table>
</div>