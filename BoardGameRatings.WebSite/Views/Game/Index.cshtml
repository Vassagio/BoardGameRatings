@using BoardGameRatings.WebSite.Controllers
@model BoardGameRatings.WebSite.ViewModels.GameViewModel

@{
    ViewData["Title"] = @Model.Name;
}

@using (Html.BeginForm(GameController.BuildSaveActionRouteValues(@Model)))
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        @Html.LabelFor(m => m.Name, new
        {
            @class = "control-label col-md-2"
        })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name)
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.Description, new
        {
            @class = "control-label col-md-2"
        })
        <div class="col-md-10 ">
            @Html.TextAreaFor(m => m.Description, new
            {
                @rows = "10"
            })
        </div>
    </div>

    <div class="form-group">
        @Html.HiddenFor(model => model.Id)
    </div>

    <div class="btn-group">
        <input type="submit" value="Save" class="btn btn-default"/>
        <a href="@Url.RouteUrl(GamesController.BuildIndexActionRouteValues())" class="btn btn-default">Cancel</a>
    </div>
}